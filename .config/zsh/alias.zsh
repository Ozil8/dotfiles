# alias python to python3.8
alias python="python3.8"

# alias ls to exa -la --group-directories-first --color=always
alias ls="exa -la --group-directories-first --color=always"

# alias neofetch to cat ~/.cache/neofetch
alias neofetch="cat ~/.cache/neofetch"

# alias clear to python -c "print('\n')" && (alias) neofetch
alias clear="/usr/bin/clear"

# alias vi to ~/.local/bin/vi.sh*
alias vi="~/.local/bin/vi.sh"
