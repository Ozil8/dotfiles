# vim: set filetype=sh
#!/usr/bin/env sh

for arg in $@; do
    case $arg in
        empty) trash-empty && exit 0;;
        list) trash-list && exit 0;;
        help) echo "Usage: trash [empty] [list] ?<file ...>";;
        *)
            [[ $previous != "empty" ]] &&
            [[ $previous != "list" ]] &&
            [[ $previous != "help" ]] &&
            trash-put $arg;;
    esac

    previous=$arg
done
