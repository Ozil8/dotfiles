# vim: set filetype=sh
#/usr/bin/env sh

for arg in $@; do
    if [ -d $arg ]; then
        type="dir"
        path=$arg
    elif [ -f $arg ]; then
        type="file"
        path=$arg
    fi
done

gitReturn=$(git -C $path root)
[[ $gitReturn != *"not a git repository"* ]] &&
    isRepo="true" || isRepo="false"
